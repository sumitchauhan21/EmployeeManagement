    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <nav class="navbar navbar-inverse">
                    <div class="container-fluid">
                      <div class="navbar-header">
                        <a class="navbar-brand" href="#">Employee Record Management App</a>
                      </div>
                      <ul class="nav navbar-nav navbar-right">
                        <li class="active"><a href="/users/update-user/<%= user.id %>"><span class="glyphicon glyphicon-user "></span> <%= user.name %></a></li>
                        <li><a href="/users/sign-out"><span class="glyphicon glyphicon-log-out"></span> Sign out</a></li>
                      </ul>
                    </div>
                </nav>
            </div>
        </div>
    </div>
    <a href="/users/create-employee-form" class="btn btn-info btn-lg">
        <span class="glyphicon glyphicon-plus"></span> Create New Employee 
    </a>
    <% if(locals.user.id === user.id) { %>
        <div class="row" >
            <div class="col" style="background-color: rgb(206, 216, 216);">
                <div style="background-color: rgb(206, 216, 216); margin-top: 25px; padding: 20px;">
                    <h1  class="text-center" style="color: orangered; font-family:sans-serif; font-style: normal;font-weight: bolder;">Employee &nbsp;List</h1>
                    <table class="table table-striped table-bordered" style="background-color: rgb(206, 216, 216) ;">
                        <thead>
                            <tr class="table-primary">
                                <th>Full Name</th> 
                                <th>Email</th>
                                <th>phone number</th>
                                <th>Address</th>
                                <th>Date of Joining</th>
                                <th>Department</th>
                                <th>Manager</th>
                                <th>Gender</th>
                                <th>Employment Status</th>
                                <th>Salary</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(let i of employee_list) { %>
                                <tr>
                                    <td><%= i.fullname %></td>
                                    <td><%= i.email %></td>
                                    <td><%= i.mobile %></td>
                                    <td><%= i.address %></td>
                                    <td><%= i.dateofjoining %></td>
                                    <td><%= i.department %></td>
                                    <td><%= i.manager %></td>
                                    <td><%= i.gender %></td>
                                    <td><%= i.employmentstatus %></td>
                                    <td><%= i.salary %></td>
                                    <td>
                        
                                    <a href="/users/update-employee/<%= i.id %>"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                                    <a href="/users/delete-employee/?id=<%= i._id %>"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            
                                </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                    </div>
            </div>
        </div>
    <% } %>
        
